{
  "name": "shiritori-online",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "dev": "run-p dev:browser dev:cli",
    "dev:browser": "cd ./packages/browser && yarn dev",
    "dev:cli": "cd ./packages/cli && yarn dev",
    "build": "run-p build:cli build:browser",
    "build:browser": "cd ./packages/browser && yarn build",
    "build:cli": "cd ./packages/cli && yarn build",
    "fmt": "yarn cl:lint && yarn sr:lint",
    "fmt:browser": "prettier -w ./packages/browser/src/*",
    "fmt:cli": "prettier -w ./packages/cli/src/*",
    "setup": "yarn install && run-p setup:browser setup:cli",
    "setup:browser": "cd ./packages/browser && yarn",
    "setup:cli": "cd ./packages/cli && yarn"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "eslint": "^7.30.0",
    "eslint-config-sumikko": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
